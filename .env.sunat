# ===================================
# CONFIGURACIÓN SUNAT PERU
# ===================================

# Ambiente: pruebas | produccion
SUNAT_AMBIENTE=pruebas

# Ruta del certificado digital (.pfx o .p12)
SUNAT_CERT_PATH=./certs/cert.pfx

# Contraseña del certificado (si aplica)
SUNAT_CERT_PASSWORD=tu_password_aqui

# Datos de la empresa (se guardan en BD, estos son valores iniciales)
SUNAT_RUC=20123456789
SUNAT_EMPRESA=Sistema Agua Perú SAC
SUNAT_DIRECCION=Lima, Lima

# Series correlativas (se pueden cambiar después)
SUNAT_SERIE_BOLETA=0001
SUNAT_SERIE_FACTURA=0001

# Usuario SOL de SUNAT (para autenticación)
SUNAT_USUARIO_SOL=tu_usuario_sol
SUNAT_PASSWORD_SOL=tu_password_sol

# Usuario principal SUNAT
SUNAT_USUARIO=tu_usuario_sunat
SUNAT_PASSWORD=tu_password_sunat
